/*底部*/
footer{
    background-color: #E6E6E6;
    width:100%;
    position:absolute;
    z-index:200;
    bottom:0;
    text-align:center;
    padding-bottom: 1.5%;
    padding-top: 1.5%;
}
.footer-nav{
	width: 49%;
	float: left;
	text-align: center;
}

.footer-nav a{
	text-decoration: none;
	color: #000000;
	padding-top: 10px;
	font-size: 1.2em;
	line-height: 2em;
}

.footer-nav a img{
	margin: 5px 20px 5px 10px;
	width: 25px;
	height: 25px;
}

.right-bordered{
	border-right: 1px solid #d2d2d2;
}