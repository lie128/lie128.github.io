*{
	padding: 0;
	margin: 0;
}
body{
　　　　font: normal 100% Helvetica, Arial, sans-serif;
}
img{
	max-width: 100%;
}

/*内容*/
.content{
	width: 80%;
	margin: 160px auto;
}
.content p{
	margin: 40px auto;
	text-align: center;
	font-size: 22px;
}

.content a{
	margin-left: 20%;
}
.content img{
	margin-top: 5px;
	width: 22px;
	height: 22px;
}

.search{
	width: 100%;
	text-align: center;
	margin-left: 5%;
	margin-bottom: 5%;
}
.search input{
	float: left;
	margin-left: 10%;
	width: 60%;
	height: 50px;
	border: none;
	border-radius: 10px;
}

.search img{
	float: left;
	margin: 10px;
	width:30px;
	height: 30px;
}

/*clearfix*/

.clearfix:after {
	content: ".";
	display: block;
	height: 0;
	clear: both;
	visibility: hidden;
}