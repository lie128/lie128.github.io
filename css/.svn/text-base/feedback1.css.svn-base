*{
	padding: 0;
	margin: 0;
}
body{
　　　　font: normal 100% Helvetica, Arial, sans-serif;
}
img{
	max-width: 100%;
}

/*内容*/

.content{
	height: 100%;
}

.content form{
	height: 100%;
}
.content-form{
	width: 80%;
	margin:10% auto;
	height: 100%;
}

.content-form h2{
	margin-bottom: 20px;
	color: #1587cd;
}

.content-form textarea{
	background-color: #E4E4E4;
	width: 100%;
	height: 60%;
	border: none;
	resize: none;
}

.content-form .submit{
	background-color: #1587cd;
	border: 0px;
	font-size: 1.4em;
	font-family: "微软雅黑";
	color: #ffffff;
	width: 150px;
	height: 40px;
	float: left;
	margin-left: 28%;
	margin-top: 10%;
	border-radius: 5px;
}

