*{
	padding:0;
	margin: 0;
}

body{	
		background-color: #FFFFFF;
　　　　font: normal 100% Helvetica, Arial, sans-serif;
}
img{
	max-width: 100%;
}
/*enter*/
.enter{
	width: 100%;
	height: 100%;
	background: url(../img/enter.jpg) no-repeat;
	background-size:100% 100%;
	
	animation: ent 2.2s ease-in-out infinite alternate;
	-webkit-animation: ent 2.2s ease-in-out infinite alternate;
	-moz-animation: ent 2.2s ease-in-out infinite alternate;
	-ms-animation: ent 2.2s ease-in-out infinite alternate;
}

@keyframes ent
{
0% {
	  -webkit-transform: scale(1,1);
	 }
50%{
	opacity: 1;
}
100% {
	 opacity: 0;
	-webkit-transform: scale(1.01,1.01);
	}
}

@-moz-keyframes ent /* Firefox */
{
0% {
	  -webkit-transform: scale(1,1);
	 }
50%{
	opacity: 1;
}
100% {
	 opacity: 0;
	-webkit-transform: scale(1.01,1.01);
	}
}

@-webkit-keyframes ent /* Safari 和 Chrome */
{
0% {
	  -webkit-transform: scale(1,1);
	 }
50%{
	opacity: 1;
}
100% {
	 opacity: 0;
	-webkit-transform: scale(1.01,1.01);
	}
}

@-o-keyframes ent /* Opera */
{
0% {
	  -webkit-transform: scale(1,1);
	 }
50%{
	opacity: 1;
}
100% {
	 opacity: 0;
	-webkit-transform: scale(1.01,1.01);
	}
}

/*content*/
.content{
	padding-top: 10%;
	height: 100%;
}
/*search*/
.search{
	width:90%;
	padding-left: 5%;
	text-align: center;
	margin-left: auto;
	margin-right: auto;
	margin-bottom: 5%;
	border: 1px solid #CCCCCC;
	border-radius: 25px;
}
.search input{
	float: left;
	width: 80%;
	height: 30px;
	border: none;
	border-radius: 10px;
}

.search img{
	float: right;
	margin: 5px 20px 5px 5px;
	width:20px;
	height: 20px;
}

/*section 01*/
.section{
	width: 100%;
	height: 24%;
	margin-bottom: 4.5%;
}
.first-section{
	background: url(../img/productintro.png) no-repeat;
	background-size: 100% 100%;
}
/*section 02*/
.second-section{
	background: url(../img/solution.png) no-repeat;
	background-size: 100% 100%;

}
/*section 03*/
.third-section{
	background: url(../img/successcase.png) no-repeat;
	background-size: 100% 100%;
}

/*clearfix*/

.clearfix:after {
	content: ".";
	display: block;
	height: 0;
	clear: both;
	visibility: hidden;
}

