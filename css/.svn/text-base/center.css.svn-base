*{
	padding: 0;
	margin: 0;
}
body{
　　　　font: normal 100% Helvetica, Arial, sans-serif;
	   
}
img{
	max-width: 100%;
}

.wrapper{
	background-color: #EFEFEF;
}

.content a{
	text-decoration: none !important;
	color: black !important;
}
/*内容*/
.content{
	padding: 40px auto;
	background-color: #EFEFEF;
	height: 100%;
}

.person{
	padding-top: 10%;
	padding-bottom:10%;
	text-align: center;
}

.person img{
	width: 20%;
	height: 20%;
	border-radius:60px ;
	margin-bottom: 10px;
}
.person span{
	font: "微软雅黑";
	font-size: 2.5em;
	color: #333333;
}

/*section*/
.section{
	background-color: #FFFFFF;
	padding-left: 4%;
	padding-top: 5%;
	padding-bottom: 5%;
	width: 100%;
	height: 10%;
	margin-bottom: 5%;
}
.section img{
	width: 25px;
	height: 25px;
	float: left;
	margin-right: 30px;
}

.section span{
	font-size: 1.5em;
}

/*clearfix*/

.clearfix:after {
	content: ".";
	display: block;
	height: 0;
	clear: both;
	visibility: hidden;
}
