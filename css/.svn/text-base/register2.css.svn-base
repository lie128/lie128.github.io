*{
	padding: 0;
	margin: 0;
}
body{	
		background-color: #EFEFEF;
　　　　font: normal 100% Helvetica, Arial, sans-serif;
}
img{
	max-width: 100%;
}

/*内容*/
.content{
	width: 90%;
	margin: 40% auto;
	height: 100%;
}

.content button{
	margin: 30px;
	margin-left: 7.5%;
	margin-right: 7.5%;
	width: 85%;
	height: 12%;
	background-color: #E5E5E5;
	border: none;
	font-size: 18px;
}
.content span{
	float: left;
	line-height: 50px;
	margin-left: 7%;
	font-size: 1.3em;
}
.content img{
	width: 50px;
	height: 50px;
	margin-left: 20px;
	float: left;
}

.content a{
	text-decoration: none;
	color: #000000;
}
