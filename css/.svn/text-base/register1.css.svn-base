*{
	padding: 0;
	margin: 0;
}
body{	
		background-color: #EFEFEF;
　　　　font: normal 100% Helvetica, Arial, sans-serif;
}
img{
	max-width: 100%;
}

/*内容*/
.content{
	width: 90%;
	height: 100%;
	margin: 5% auto;

}
.title{
	color: #FFFFFF;
	background-color: #1587cd;
	padding:5%;
	border-radius: 5px;
}
.title span{
	font-size: 18px;
}
.title a{
	text-decoration: none;
	float: right;
	color: #FFFFFF
}

.content-form{
	background-color: #F8F8F8;
	border-bottom-left-radius: 25px;
	border-bottom-right-radius: 25px;
	padding: 20px 10px 90px 10px;
	height: 75%;
	text-align: center;
}
.content-form input{
	border-radius: 5px;
	border:1px solid #D7D7D7;
	margin: 4%;
	padding:6%;
	height: 5%;
	width: 85%;
	font-size: 20px;
}

.content-form .submit{
	background-color: #1587cd;
	padding: 0;
	border: 0px;
	font-size: 1.4em;
	font-family: "微软雅黑";
	color: #ffffff;
	width: 150px;
	height: 45px;
	border-radius: 5px;
	align-content: center;
}

/*clearfix*/

.clearfix:after {
	content: ".";
	display: block;
	height: 0;
	clear: both;
	visibility: hidden;
}
